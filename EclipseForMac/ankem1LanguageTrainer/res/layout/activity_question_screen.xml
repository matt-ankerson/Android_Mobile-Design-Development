<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.ankem1.LanguageTrainer.QuestionScreen" >

    <TextView
        android:id="@+id/txtInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_marginLeft="25dp"
        android:text="What gender is this?" />

    <ImageView
        android:id="@+id/imgNoun"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:src="@drawable/das_auto" />

    <RadioGroup
        android:id="@+id/rbgOptions"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imgNoun"
        android:layout_below="@+id/imgNoun"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <RadioButton
            android:id="@+id/rbDie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="die" />

        <RadioButton
            android:id="@+id/rbDas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="das" />

        <RadioButton
            android:id="@+id/rbDer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="der" />
    </RadioGroup>

    <TextView
        android:id="@+id/txtFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtInstructions"
        android:layout_marginBottom="20sp"
        android:layout_below="@+id/imgNoun"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rbgOptions"
        android:layout_alignParentLeft="true"
        android:text="Confirm" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rbgOptions"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:text="Next" />

</RelativeLayout>